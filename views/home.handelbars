<html>

    <header>
      <h1>Registration</h1>
    </header>
    <body>
    <form action="reg_numbers" method="post">

        <div class="row">
      <div class="col-12">
        <input class="col-4 InputReg" type="text" name ="regText" placeholder="Enter a Registration number"> <br>
      </div>
      <br>
      <br>
    </div>
    <div class="col-12">
      <button class="button-primary Addbtn" type="submit" name="button">Add</button>
    </div>
    <br>
    <br>

    <div class="row">
      <div class="col-2">
        <input type="radio" name="TypeOfTown" class="Town" value="CK">
        <span>Malmesbury</span>
      </div>
      <div class="col-2">
        <input type="radio" name="TypeOfTown" class="Town" value="CY">
        <span>Bellville</span>
      </div>
      <div class="col-2">
        <input type="radio" name="TypeOfTown" class="Town" value="CA">
        <span>CapeTown</span>
      </div>
      <div class="col-2">
        <input type="radio" name="TypeOfTown" class="Town" value="CAW">
        <span>George</span>
      </div>
      <div class="col-2">
        <input type="radio" name="TypeOfTown" class="Town" value="">
        <span>All</span>
      </div>
      <br>
      <br>
       </form>


    <form action="filter" method="post">
      <div class="row">
        <div class=" col-12 ">
         
          <button class="button-primary displayBtn" type="submit" name="button">Display</button> </form>
        </div>
        <br>
        <br>
      </div>
       
      
      <div class="row">
       
        <ul class="col-12 RegNameDisplay">{{display}}</ul>
     
 
        <form action="reset" method="post">

         <button class="button-primary resetbtn" type="submit" name="button">clear</button></form>
        
</body>

</html>
